doctype html
html
  head
    title Admin Login
    |     
    link(rel="stylesheet" href="../css/signin.css")
    link(href='http://fonts.googleapis.com/css?family=Amatic+SC' rel='stylesheet' type='text/css')
 
    body
        .jumbotron.text-center.signin
             h1.admin
                
                span.oakbay          Admin Login
                .adminlogin
                    form(action="/app/admin", method='post')
                        .form-group
                            label Username
                            input.form-control(type='text', name='username')
                        .form-group
                            label Password
                            input.form-control(type='text', name='adminpassword')
                        button.btn.btn-success.btn-lg(type="submit") Login
