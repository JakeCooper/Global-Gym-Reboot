.modal-header(ng-controller='eventModalController')
    h3.modal-title All Users Events
    .modal-body
        form
            table.eventsTable
                tr
                    th
                        | Room
                    | &#x9;&#x9;
                    th
                        | Date
                    | &#x9;&#x9;
                    th
                        | Delete
                    | &#x9;&#x9;
                | &#x9;
                tr(ng-repeat='event in userEvents')
                    td {{event.roomName}}
                    | &#x9;&#x9;
                    td {{event.startTime}}
                    | &#x9;&#x9;
                    input.btn.btn-primary(type='button', value='Delete Event', ng-click='deleteEvent(event)')
    .modal-footer()
      button.btn.btn-danger(ng-click='cancel()') Close